<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="@bkhalsi" id="1">
        <createTable tableName="BACKLOG_ELEMENT">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(510)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints foreignKeyName="backlog_element_user_fk" referencedColumnNames="id"
                             referencedTableName="user"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="INT">
                <constraints foreignKeyName="backlog_element_type_fk" referencedColumnNames="id"
                             referencedTableName="REF_BACKLOG_ELEMENT_TYPE"/>
            </column>
            <column name="level" type="INT">
                <constraints foreignKeyName="backlog_element_level_fk" referencedColumnNames="id"
                             referencedTableName="REF_LEVEL"/>
            </column>
            <column name="url" type="VARCHAR(255)"></column>
            <column name="content" type="TEXT"></column>
            <column name="transcription" type="TEXT"></column>
            <column name="metadata" type="JSONB"></column>

        </createTable>
        <rollback>
            <dropTable tableName="BACKLOG_ELEMENT"/>
        </rollback>
    </changeSet>
</databaseChangeLog>