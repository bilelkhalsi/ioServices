<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="@bkhalsi" id="1">
        <createTable tableName="BACKLOG_MODULE">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints foreignKeyName="backlog_element_user_fk" referencedColumnNames="id"
                             referencedTableName="user"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="BACKLOG_MODULE"/>
        </rollback>
    </changeSet>

    <changeSet author="@bkhalsi" id="2">
        <createTable tableName="BACKLOG_MODULE_ELEMENT">
            <column autoIncrement="true" name="module_id" type="INT">
                <constraints nullable="false" foreignKeyName="module_id_fk" referencedTableName="BACKLOG_MODULE" referencedColumnNames="ID"/>
            </column>
            <column autoIncrement="true" name="element_id" type="INT">
                <constraints nullable="false" foreignKeyName="element_id_fk" referencedTableName="BACKLOG_ELEMENT" referencedColumnNames="ID"/>
            </column>
            <column name="element_order" type="INT"></column>
        </createTable>
        <addPrimaryKey tableName="BACKLOG_MODULE_ELEMENT" columnNames="module_id, element_id" constraintName="backlog_module_element_pk"/>
        <rollback>
            <dropTable tableName="BACKLOG_MODULE_ELEMENT"/>
        </rollback>
    </changeSet>
</databaseChangeLog>